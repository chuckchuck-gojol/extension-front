{
  "name": "언어분류기",
  "description": "유튜브 댓글을 언어에 따라서 분류해서 볼 수 있는 크롬 익스텐션",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "sidebar_action": {
    "default_page": "popup/popup.html",
    "default_icon": {
      "16": "images/icon_48.png"
    },
    "default_title": "언어분류기",
    "use_navigation_bar": false,
    "mobile_user_agent": false
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}